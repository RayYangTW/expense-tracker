<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">註冊</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">姓名</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="輸入姓名" value="{{ name }}">
        </div>

        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <span class="text-danger"> * </span>
          <input type="email" name="email" id="email" class="form-control" placeholder="輸入Email" value="{{ email }}"
            required>
        </div>

        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <span class="text-danger"> * </span>
          <input type="password" name="password" id="password" class="form-control" placeholder="輸入密碼"
            value="{{ password }}" required>
        </div>

        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">確認密碼</label>
          <span class="text-danger"> * </span>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="再次輸入密碼"
            value="{{ confirmPassword }}" required>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-block">確認註冊</button>
        </div>
        <hr>
        <div class="text-center">
          <a href="/auth/facebook" class="btn btn-primary-outline"><i class="fa-brands fa-facebook fa-2xl"></i></a>
        </div>
      </form>
      <p class="lead mt-4">
        已經有帳號了？ <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>