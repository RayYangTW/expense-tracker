<h2 class="m-3 text-center">請修改你的支出</h2>
<div class="container" style="max-width: 300px">
  {{> message}}
</div>

<div class="container" style="max-width: 500px">
  <form action="/records/{{ record._id }}?_method=PUT" method="POST">
    <div class="row mb-3">
      <label for="name" class="col-sm-3 col-form-label text-end">
        <span class="text-danger">
          *
        </span>
        名稱：
      </label>
      <div class="col-sm-9 mb-3">
        <input type="text" id="name" name="name" class="form-control" value="{{record.name}}" required>
      </div>

      <label for="date" class="col-sm-3 col-form-label text-end">
        <span class="text-danger">
          *
        </span>
        日期：
      </label>
      <div class="col-sm-9 mb-3">
        <input type="date" id="date" name="date" class="form-control" placeholder="MM/DD/YYYY" value="{{record.date}}" required>
      </div>

      <label for="category" class="col-sm-3 col-form-label text-end">
        <span class="text-danger">
          *
        </span>
        類別：
      </label>
      <div class="col-sm-9 mb-3">
        <select name="category" id="category" class="form-select" aria-label="Default select example" value="{{record.category}}">
          <option value="">請選擇類別</option>
          {{#each categoryData}}
          <option value="{{this._id}}" {{#if this.selected}} selected {{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <label for="amount" class="col-sm-3 col-form-label text-end">
        <span class="text-danger">
          *
        </span>
        金額：
      </label>
      <div class="col-sm-9 mb-3">
        <input type="number" id="amount" name="amount" class="form-control" value="{{record.amount}}" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">
          修改
        </button>
        <a href="/">
          <button type="button" class="btn btn-success">
            取消
          </button>
        </a>
      </div>

    </div>
  </form>
</div>